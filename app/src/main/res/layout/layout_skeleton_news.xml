<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_margin="@dimen/margin_largest"
        android:layout_weight="1"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_info"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_largest"
        android:layout_weight="1"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toBottomOf="@id/view_title" />

    <View
        android:id="@+id/view_time"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/margin_largest"
        android:layout_marginRight="@dimen/margin_largest"
        android:layout_weight="1"
        android:background="@color/shimmer_color"
        app:layout_constraintBottom_toBottomOf="@id/view_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_info" />

    <View
        android:id="@+id/view_text_1"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/margin_largest"
        android:layout_weight="1"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintTop_toBottomOf="@id/view_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_text_2"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/margin_largest"
        android:layout_weight="1"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_text_1" />

    <View
        android:id="@+id/view_text_3"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/margin_largest"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_text_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>